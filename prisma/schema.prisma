// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Site {
    id              Int       @id @default(autoincrement())
    name            String?
    users           User[]
}

model User {
    id              Int       @id @default(autoincrement())
    name            String?
    secrets         Secret[]
    site            Site      @relation(fields: [siteId], references: [id])
    siteId          Int
}

model Secret {
    id              Int       @id @default(autoincrement())
    name            String?

    exchange        Int
    isActual        String
    userid          String
    acount          String
    acountSub       String
    appkey          String
    appsecret       String
    periodFrom      String
    periodTo        String
    feeType         String
    isOrder         String
    tokens          Token[]
    user            User      @relation(fields: [userParentId], references: [id])
    userParentId    Int
}

model Token {
    id              Int       @id @default(autoincrement())
    name            String?
    access_token    String
    token_type      String
    expires_in      Int
    access_token_token_expired  String
    secret          Secret    @relation(fields: [secretId], references: [id])
    secretId        Int
}
